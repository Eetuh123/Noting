@model Noting.Controllers.ChartController.AllChartViewModel
@{
    Layout = null;
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<div id="chart-container" class="relative w-full h-[600px] p-2 box-border">
    <canvas id="allChart" class="w-full h-full"></canvas>
</div>

<script>
    const labels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Labels));
    const raw    = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Raw));

    const palette = [
      '#ED4E33','#1F77B4','#2CA02C','#D62728','#9467BD',
      '#8C564B','#E377C2','#7F7F7F','#BCBD22','#17BECF',
      '#AEC7E8','#FF7F0E','#98DF8A','#FF9896','#C5B0D5',
      '#C49C94','#F7B6D2','#C7C7C7','#DBDB8D','#9EDAE5'
    ];

    const datasetsByMetric = {
          Weight: Object.entries(raw).map(([name, s], idx) => ({
      label: name,
      data: s.Weight,
      borderColor: palette[idx % palette.length],
      fill: false
    })),
      Reps:   Object.entries(raw).map(([name,s])=>({ label:name, data:s.Reps,    borderColor:'black',  fill:false })),
      Volume: Object.entries(raw).map(([name,s])=>({ label:name, data:s.Volume,  borderColor:'green',  fill:false })),
      OneRm:  Object.entries(raw).map(([name,s])=>({ label:name, data:s.OneRm,   borderColor:'purple', fill:false }))
    };

    const ctx = document.getElementById('allChart').getContext('2d');
    const chart = new Chart(ctx, {
      type: 'line',
      data: { labels, datasets: datasetsByMetric.Weight },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: { beginAtZero: true, title: { display: true, text: 'Weight' } }
        },
        plugins: { legend:{ position:'top' } }
      }
    });

    function select(m) {
      chart.data.datasets = datasetsByMetric[m];
      chart.options.scales.y.title.text = m;
      chart.update();

      document.querySelectorAll('.metric-btn').forEach(b => {
        if (b.id === 'btn' + m) {
          b.classList.add('bg-gray-800','text-white');
          b.classList.remove('bg-gray-200','text-gray-800');
        } else {
          b.classList.add('bg-gray-200','text-gray-800');
          b.classList.remove('bg-gray-800','text-white');
        }
      });
    }

    for (let m of ['Weight','Reps','Volume','OneRm']) {
      document.getElementById('btn' + m)
              .addEventListener('click', () => select(m));
    }
    select('Weight');
</script>
